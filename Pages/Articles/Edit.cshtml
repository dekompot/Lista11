@page
@model Lista12.Pages.Articles.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Article.ArticleId" />
            <div class="form-group">
                <label asp-for="Article.Name" class="control-label"></label>
                <input asp-for="Article.Name" class="form-control" />
                <span asp-validation-for="Article.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Article.ImageName)
                </dt>
                <dd class="col-sm-10">
                    <img src="~/@Url.Content(Model.Article.ImageName is null ? "Images/no_image.jpg" : "Uploads/"+Model.Article.ImageName)" alt="Image" />
                </dd>
            </div>
            <input type="hidden" asp-for="Article.ImageName" />
            <div class="form-group">
                <label asp-for="Article.Price" class="control-label"></label>
                <input asp-for="Article.Price" class="form-control" />
                <span asp-validation-for="Article.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.ExpirationDate" class="control-label"></label>
                <input asp-for="Article.ExpirationDate" class="form-control" />
                <span asp-validation-for="Article.ExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.CategoryId" class="control-label"></label>
                <select asp-for="Article.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="Article.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
