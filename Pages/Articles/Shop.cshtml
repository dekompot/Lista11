@page
@model Lista12.Pages.Articles.ShopModel

@{
    ViewData["Title"] = "Shop";
}

<h1>Shop</h1>
<form method="get">
    <fieldset>
        @Html.DisplayNameFor(model => model.Article[0].Category)
        @Html.DropDownList("Category")

        <p>
            <input type="submit" value="Show" />
        </p>

    </fieldset>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].ImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].ExpirationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Article) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                 <img class="index_image" src="~/@Url.Content(item.ImageName is null ? "Images/no_image.jpg" : "Uploads/" + item.ImageName)" alt="Image">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpirationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
                <td>
                    <form method="post" asp-page-handler="AddToBasket" asp-route-id="@item.ArticleId">
                        <button type="submit" class="btn btn-success">+</button>
                    </form>
                </td>
        </tr>
}
    </tbody>
</table>
